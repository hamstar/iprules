#!/bin/bash

source /etc/iprules.conf

echo "# Generated by iptrules $(date +"%Y-%m-%d %H:%M:%S")
*filter
$(cat $POLICY_FILE)
" > $RULES_FILE;

if [ "$(ls $E_PATH|wc -l)" != "0" ]; then
  cat $E_PATH/* >> $RULES_FILE;
else
  echo "# no rules enabled" >> $RULES_FILE;
fi;

echo "COMMIT" >> $RULES_FILE;

echo "Rebuilt rules file.";
