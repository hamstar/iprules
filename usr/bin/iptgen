#!/bin/bash

source /etc/iptrules.conf;

echo "Generating rules file at $RULES_FILE using enabled rules:";
iptlist;

echo "# Generated by iptrules "`date +"%Y-%m-%d %H:%M:%S"` > "$RULES_FILE";
echo "*filter" >> "$RULES_FILE";
cat $BASE_PATH/policy.rules >> "$RULES_FILE";
[ "$(ls -A $E_PATH|wc -l)" = "0" ] && cat $E_PATH/* >> "$RULES_FILE";
echo "COMMIT" >> "$RULES_FILE";
